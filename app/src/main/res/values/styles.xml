<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignInHint" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorSubtitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColorPrimary">@color/colorMainApp</item>
        <item name="android:textColorSecondary">@color/colorMainApp</item>
        <item name="colorAccent">@color/colorSubtitle</item>
        <item name="colorControlNormal">@color/colorSubtitle</item>
        <item name="colorControlActivated">@color/colorSubtitle</item>
    </style>

    <style name="MyAppTheme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextInputError</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NextActivityTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/text_next_activity</item>
    </style>
</resources>
